
<main>

<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
 <div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h1>Editing Book</h1>

 <% if @book.errors.any? %>
  <%= pluralize(@book.errors.count, "error") %>
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>


  <div class="form-group">
    <label for="book_title">Title</label></br>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <label for="book_opinion">Opinion</label></br>
    <%= f.text_area :body %></br>
  </div>
  <div class="form-group">
    <%= f.submit 'Update Book'%></br>
  </div>
  <span><%= link_to 'Show' , book_path %></span>|
  <span><%= link_to 'Back' , books_path %></span>
  <% end %>

  </div>
</div>
</main>