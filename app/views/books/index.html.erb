<main>

    <% if user_signed_in? %>
    <%= render 'layouts/search' %>
    <% end %>
<%= render'books/list',user: @user,book: @book%>

<div class='col-md-8 offset-md-1'>
     <h2>Books</h2>
 <table class='table table-hover table-inverse'>

      <thead>
         <th> Title</th>
         <th> Opinion</th>
        <th colspan="3"></th>
     </thead>

     <% @books.each do |book| %>
     <tr id="book_<%= book.id %>">

    <td><%= link_to (attachment_image_tag book.user, :profile_image, fallback: "no_image.jpg", size: "40x40"), user_path(book.user.id) %></td>

     <td><%= link_to book.title, book_path(book.id)%></td>
      <td><%= book.body %></td>

  <td class="favorite-btn"><%= render "favorites/favorite-btn", book: book %></td>
      <td>コメント数: <%= book.book_comments.count %></td>

   </tr>

      <% end %>


  </table>

</div>

</main>
