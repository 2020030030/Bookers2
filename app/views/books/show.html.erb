<main>
<%= flash[:danger] %>
 <%= render'books/list',user: @user,book: @book_new%>
 <div class='col-md-8 offset-md-1'>
   <h2>Book detail</h2>
   <table class='table'>


 <thead>
  <th></th>
  <th>Title</th>
  <th>Opinion</th>
  <th colspan="3"></th>
 </thead>


   <tr id="book_<%= @book.id %>">

    <td><%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg",size:"40x40" %></br>
    <%= link_to @user.name, user_path(@book.user) %></td>
    <td><%= @book.title %></td>
    <td><%= @book.body %></td>

    <td class="favorite-btn"><%= render "favorites/favorite-btn", book: @book %></td>

    <% if @user.id == current_user.id %>
    <td><%= link_to 'Edit', edit_book_path, class: "btn btn-secondary" %></td>
    <td><%= link_to 'Destroy', book_path,method: :delete ,class: "btn btn-secondary" %></td>
    <% end %>
    <th colspan="3"></th>
</table>

  <table class="book_comments">
      <%= render 'book_comments/index', book: @book %>
    </table>
 <td>

<%= form_with model:[@book, @book_comment] do |f| %>
  <%= f.text_area :comment, rows:'5' %>
  <%= f.submit "送信" %>
<% end %>
</td>
   </tr>


 </table>

 </div>

</main>