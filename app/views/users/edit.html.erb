<main>
<div class='container'>
<div class='row'>
<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<h2>User info</h2>
<%= form_with model:@user, local:true do |f| %>

 <% if @user.errors.any? %>
  <%= pluralize(@user.errors.count, "error") %>
  <% @user.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>


<div class="form-group">
  <label for="user_name">Name</label></br>
  <%= f.text_field :name, autofocus: true, id:"user_", placeholder:"Name"%>
  </div>

 <div class="form-group">
  <label for="inputImage">Image</label></br>
  <%= f.attachment_field :profile_image, placeholder: "Image" %>
 </div>

<div class="form-group">
  <label for="inputIntroduction">Introduction</label></br>
  <%= f.text_field :introduction %></br>
  <%= f.submit "Update User", class:"btn btn-secondary" %>
</div>

<% end %>
</div>
</div>
</div>
</main>